<Window x:Class="ChatGptExtension.ChatGptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatGPT" Height="400" Width="600">
    <Grid>
        <TextBox x:Name="InputTextBox" Height="100" Margin="10" VerticalAlignment="Top" />
        <Button Content="Send" Height="30" Width="100" Margin="10" VerticalAlignment="Top" Click="SendButton_Click"/>
        <TextBox x:Name="ResponseTextBox" Height="200" Margin="10,120,10,10" VerticalAlignment="Top" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>

        <!-- New Buttons for Copy and Insert -->
        <!--<Button x:Name="CopyButton" Content="Copy Code" Height="30" Width="100" Margin="469,300,31,54" Click="CopyButton_Click" RenderTransformOrigin="1.24,-1.033"/>
        <Button x:Name="InsertButton" Content="Insert Code" Height="30" Width="100" Margin="469,252,31,102" Click="InsertButton_Click" RenderTransformOrigin="0.54,2.867"/>-->

        <Button x:Name="CopyButton" Height="30" Width="30" Margin="544,237,26,117" Click="CopyButton_Click">
            <Image Source="Images/copy_icon.png" />
        </Button>
        <Button x:Name="InsertButton" Height="30" Width="30" Margin="544,190,26,164" Click="InsertButton_Click" RenderTransformOrigin="3.133,0.434">
            <Image Source="Images/insert_icon.png" />
        </Button>
    </Grid>
</Window>