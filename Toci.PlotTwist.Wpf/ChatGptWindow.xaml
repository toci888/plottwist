<Window x:Class="Toci.PlotTwist.Wpf.ChatGptWindow"
		xmlns:ChatGptWindow="Toci.PlotTwist.Wpf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatGPT toci Extension" Height="400" Width="600">
	<Grid>
		<TextBox Name="InputTextBox" Height="100" Margin="10" VerticalAlignment="Top" AcceptsReturn="True" />
		<Button Content="Send" Height="30" Width="100" Margin="10,120,0,0" Click="SendButton_Click" />
		<TextBox Name="ResponseTextBox" Height="200" Margin="10,160,10,10" VerticalAlignment="Top" IsReadOnly="True" />
		<Button Content="Copy" Height="30" Width="100" Margin="120,120,0,0" Click="CopyButton_Click" />
		<Button Content="Insert" Height="30" Width="100" Margin="230,120,0,0" Click="InsertButton_Click" />
	</Grid>
</Window>